#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

cd $base
romname=""
findproject=$(ls | grep 'superr_' | sed 's/superr_//')
until [[ $(echo "$findproject" | grep "$romname") = "$romname" ]]; do
	clear
	banner
	echo "Existing Projects:"
	echo "$findproject"
	echo ""
	echo "Write a name from the projects listed above"
	read romname
	clear
done
export romname="$romname"
clear
./superr
exit
