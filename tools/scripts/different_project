#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

cd $base
clear
banner
echo "Existing Projects:"
echo ""
PS3="
Choose an existing project and press ENTER: "
findproject=( $(ls -d */ | grep 'superr_' | sed 's/superr_//' | sed 's/\///') )
select project in "${findproject[@]}" "Main Menu" ; do
	if (( REPLY == 1 + ${#findproject[@]} )) ; then
		clear
		cd $base
		exec ./superr
		exit
	elif (( REPLY > 0 && REPLY <= ${#findproject[@]} )) ; then
		romname=""
		export romname="$project"
		break
	else
		echo "Invalid option. Please try again."
	fi
done
exec ./superr
exit
