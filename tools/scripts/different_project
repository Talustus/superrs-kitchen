#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

cd $base
clear
banner
echo "${greenb}Existing Projects:$normal"
echo ""
PS3="
Choose an existing project and press ENTER: "
findproject=( $(ls -d */ | grep 'superr_' | sed 's/superr_//' | sed 's/\///') )
select project in "${findproject[@]}" "Main Menu" ; do
	if (( REPLY == 1 + ${#findproject[@]} )) ; then
		cd $base
		exec ./superr
		exit
	elif (( REPLY > 0 && REPLY <= ${#findproject[@]} )) ; then
		romname=""
		export romname="$project"
		break
	else
		echo "${redt}Invalid option. Please try again.$normal"
	fi
done
cd $base
exec ./superr
exit
