#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

cd $tools/boot/mkbootimg
( exec ./repackimg.sh >> $logs/boot.log )
cd $romdir
if [[ -f image-new.img ]]; then
	mv image-new.img boot.img
fi
clear
banner
echo "${greent}boot.img packed, ramdisk remains$normal"
echo ""
read -p "Press ENTER to return to the boot menu"
cd $scripts
exec ./boot_tools
exit
