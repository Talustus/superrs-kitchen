#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "$bold$stand                   SuperR's Kitchen                   $normal"
	echo "$italic$stand                       by SuperR                      $normal"
	echo "------------------------------------------------------"
	echo ""
}
clear
banner
echo "${bluet}Modifying ramdisk ...$normal"
cd $romdir/bootimg/ramdisk
cat $tools/boot/sepol/sepol.txt >> init.rc
fstab=$(ls | grep -v goldfish | grep -m 1 fstab)
sed -i 's/,verify//' $fstab
sed -i 's/,support_scfs//' $fstab
cp $tools/boot/sepol/fix_cache_types.sh sbin/
exit
