#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

if [[ $insecurestatus = "No" ]]; then
	sed -i -e "/ro\.secure=1/{r $tools/boot/insecure.txt" -e "d}" $romdir/bootimg/ramdisk/default.prop
	clear
	banner
	echo "The boot.img is now insecure"
	echo ""
	read -p "Press ENTER to return to boot menu"
	cd $scripts
	exec ./boot_tools
	exit
else
	clear
	banner
	echo "The boot.img is already insecure"
	echo ""
	read -p "Press ENTER to return to boot menu"
	cd $scripts
	exec ./boot_tools
	exit
fi
