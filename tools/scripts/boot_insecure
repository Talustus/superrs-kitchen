#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

if [[ $insecurestatus = "No" ]]; then
	sed -i 's/ro\.secure=1/ro\.secure=0\
	ro\.adb\.secure=0/' $romdir/bootimg/ramdisk/default.prop
	clear
	banner
	echo "The boot.img is now insecure"
	echo ""
	read -p "Press ENTER to return to boot menu"
	clear
	cd $scripts
	exec ./boot_tools
	exit
else
	clear
	banner
	echo "The boot.img is already insecure"
	echo ""
	read -p "Press ENTER to return to boot menu"
	clear
	cd $scripts
	exec ./boot_tools
	exit
fi
