#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

if [[ -d $romdir/.git ]]; then
	internet=$(ping -q -w 1 -c 1 `/sbin/ip r | grep default | cut -d ' ' -f 3` > /dev/null && echo ok || echo error)
	if [[ $internet = "ok" ]]; then
		cd $romdir
		git fetch origin
		isupdate=$(git log HEAD..origin/master --oneline)
		if [[ ! $isupdate = "" ]]; then
			git pull
			clear
			banner
			echo "${greent}SuperR's Kitchen has been updated$normal"
			echo ""
			read -p "Press ENTER to return to main menu"
		fi
	fi
fi
exit
