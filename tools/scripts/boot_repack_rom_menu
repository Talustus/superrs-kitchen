#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

cd $tools/boot
( exec mkbootimg/mkboot $romdir/bootimg $romdir/boot.img >> $logs/boot.log )
rm -rf $romdir/bootimg
banner
echo "boot.img packed, ramdisk deleted"
echo ""
read -p "Press ENTER to continue building your ROM zip"
clear
cd $scripts
exec ./build_rom_zip
exit
