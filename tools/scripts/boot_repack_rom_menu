#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

cd $tools/boot/mkbootimg
( exec ./repackimg.sh >> $logs/boot.log )
cd $romdir
if [[ -f image-new.img ]]; then
	mv image-new.img boot.img
fi
rm -rf bootimg
clear
banner
echo "${greent}boot.img packed, ramdisk deleted$normal"
echo ""
if [[ $islg = "lge" ]]; then
	cd $romdir
	$tools/open_bump.py boot.img
	mv boot_bumped.img boot.img
	echo ""
	echo "${greent}renamed boot_bumped.img to boot.img$normal"
	echo ""
fi
echo ""
read -p "Press ENTER to continue building your ROM zip"
cd $scripts
exec ./build_rom_zip
exit
