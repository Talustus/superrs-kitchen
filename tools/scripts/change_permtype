#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

clear
banner
echo "Which permission type would you like to use?"
echo ""
echo "1) set_metadata"
echo "2) set_perm"
echo ""
choice=""
while [[ $choice -lt "1" || $choice -gt "2" ]] ; do
	read -n 1 -p "Please enter your choice:" choice
done	
# set_metadata chosen
if [[ $choice == "1" ]]; then
	permtype="set_metadata"
	echo "$permtype" > $deviceloc/permtype
# set_perm chosen
elif [[ $choice == "2" ]]; then
	permtype="set_perm"
	echo "$permtype" > $deviceloc/permtype
fi
cd $scripts
./update_perms
./rom_tools
exit
