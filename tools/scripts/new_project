#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

cd $base

clear
banner
romname=""
romname1=""
echo "Enter new project name (spaces will be replcaed with _):"
read romname1
export romname=$(echo "$romname1" | sed 's/ /_/g')
if [[ $(find . -type d | grep $romname$) = "" ]]; then
	mkdir superr_$romname
else
	clear
	banner
	echo "${redb}${yellowt}${bold}ERROR:$normal"
	echo "${redt}You already have a project with that name$normal"
	echo ""
	read -p "Press ENTER to try again"
	cd $scripts
	exec ./new_project
	exit
fi
exec ./superr
exit
