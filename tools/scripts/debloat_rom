#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo -e "-\e[1;107;30m                 SuperR's Kitchen                   \e[0m-"
	echo -e "-\e[3;107;30m                     by SuperR                      \e[0m-"
	echo "------------------------------------------------------"
	echo ""
}

debloat=""
clear
banner
read -n 1 -p "Would you like to debloat your ROM? y/n  "
echo ""
echo ""
if [[ ! $REPLY = "y" ]]; then
	cd $scripts
	exec ./rom_tools
	exit
fi	
cat $tools/root/bloat | while read debloat ; do 
	if [[ -f $romdir/$debloat ]]; then
		echo "Deleting $debloat ..."
		echo ""
		rm -rf $romdir/$debloat
	fi
done
clear
banner
read -p "Finished debloating. Press ENTER to return to ROM Tools"
cd $scripts
exec ./rom_tools
exit
