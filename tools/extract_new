#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

cd $romdir
clear
banner

if [ -f *.zip ]; then
	echo "Extracting zip in superr_$romname"
	7za x *.zip >> $logs/zip.log
	rm -rf *.zip
elif [ -f *.tar ]; then
	echo "Extracting tar in superr_$romname"
	tar -xf *.tar >> $logs/zip.log
	rm -rf *.tar
	cd $tools
	cp -r ./META-INF $romdir
else
	clear
	banner
	echo "There is no zip or tar to extract in superr_$romname"
	echo ""
	read -p "Press ENTER to return to main menu"
fi
cd $base
clear
./superr
exit
