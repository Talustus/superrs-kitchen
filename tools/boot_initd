#!/bin/bash

# Do not edit this file unless you know what you are doing

banner() {
	echo ""
	echo "------------------------------------------------------"
	echo "-                                                    -"
	echo "-                 SuperR's Kitchen                   -"
	echo "-                     by SuperR                      -"
	echo "-                                                    -"
	echo "------------------------------------------------------"
	echo ""
}

cd $tools
if [[ $initdstatus = "No" ]]; then
	cp -r ./initd/* $romdir
	sed -i '1iimport /init.d_support.sh' $romdir/bootimg/ramdisk/init.rc
	banner
	echo "init.d support has been added"
	echo ""
	read -p "Press ENTER to return to boot menu"
	clear
	./boot_tools
	exit
else
	clear
	banner
	echo "You already have init.d support"
	echo ""
	read -p "Press ENTER to return to boot menu"
	clear
	./boot_tools
	exit
fi
